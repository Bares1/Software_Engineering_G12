<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1400.0" spacing="20.0" stylesheets="@catalogM/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController">
   <children>
      <BorderPane prefHeight="997.0" prefWidth="1400.0">
         <center>
            <AnchorPane prefHeight="662.0" prefWidth="1202.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane layoutX="40.0" layoutY="61.0" prefHeight="655.0" prefWidth="1098.0">
                     <content>
                        <VBox fx:id="movieLayout">
                           <children>
                              <GridPane fx:id="moveisListGrid" alignment="CENTER" onMouseClicked="#chooseMovie" prefHeight="0.0" prefWidth="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" />
                                </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints vgrow="SOMETIMES" />
                                 </rowConstraints>
                              </GridPane>
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
                  <TextField fx:id="searchTextField" layoutX="47.0" layoutY="23.0" prefHeight="26.0" prefWidth="250.0" promptText="Search" />
                  <ComboBox fx:id="filterByTypeComboBox" layoutX="311.0" layoutY="23.0" onAction="#chooseType" prefHeight="20.0" prefWidth="150.0" />
               </children>
            </AnchorPane>
         </center>
         <left>
            <AnchorPane prefHeight="431.0" prefWidth="201.0" style="-fx-background-color: #ffff;" styleClass="PanelBackground" stylesheets="@catalogM/style.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="customerPanelBtn" layoutX="43.0" layoutY="127.0" mnemonicParsing="false" onAction="#customerController" prefHeight="26.0" prefWidth="116.0" text="Customer Panel" textFill="#1010ff" />
                  <Button fx:id="employeePanelBtn" layoutX="43.0" layoutY="198.0" mnemonicParsing="false" onAction="#employeeController" prefHeight="26.0" prefWidth="116.0" text="Employee Panel" textFill="#00a606" />
                  <Button fx:id="submitComplaintBtn" layoutX="43.0" layoutY="269.0" mnemonicParsing="false" onAction="#complaintController" prefHeight="26.0" prefWidth="116.0" text="Submit Complaint" textFill="#635300" />
                  <Button fx:id="homeScreenBtn" layoutX="43.0" layoutY="60.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="116.0" text="Home Screen" textFill="RED" />
               </children>
            </AnchorPane>
         </left>
         <top>
            <AnchorPane prefHeight="226.0" prefWidth="1400.0" style="-fx-background-color: #ffff;" styleClass="PanelBackground" stylesheets="@catalogM/style.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="catalogButton" cancelButton="true" layoutX="1292.0" layoutY="186.0" mnemonicParsing="false" onAction="#catalogController" opacity="0.0" text="Movie Catalog" />
                  <Label layoutX="518.0" layoutY="85.0" prefHeight="56.0" prefWidth="364.0" text="Welcome to Cinema12" textFill="WHITE">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </top>
      </BorderPane>
   </children>
</VBox>
