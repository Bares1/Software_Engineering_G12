<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="260.0" prefWidth="389.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ServerLoginController">
   <children>
      <Text layoutX="112.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Client Configuration">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
      <RadioButton fx:id="localhostRadioBtn" layoutX="73.0" layoutY="79.0" mnemonicParsing="false" onAction="#ipAddress" selected="true" text="Localhost">
         <toggleGroup>
            <ToggleGroup fx:id="IpSelection" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="specificIpRadioBtn" layoutX="73.0" layoutY="119.0" mnemonicParsing="false" onAction="#ipAddress" text="Specific IP" toggleGroup="$IpSelection" />
      <TextField fx:id="ipTextField" layoutX="168.0" layoutY="111.0">
         <tooltip>
            <Tooltip text="Set the local ip address of the server" wrapText="true" />
         </tooltip>
      </TextField>
      <Button fx:id="connectBtn" layoutX="162.0" layoutY="197.0" mnemonicParsing="false" onAction="#connectToServer" text="Connect" />
      <Label layoutX="93.0" layoutY="160.0" text="Port" />
      <TextField fx:id="portTextField" layoutX="168.0" layoutY="151.0">
         <tooltip>
            <Tooltip text="Set the local ip address of the server" wrapText="true" />
         </tooltip>
      </TextField>
   </children>
</AnchorPane>
